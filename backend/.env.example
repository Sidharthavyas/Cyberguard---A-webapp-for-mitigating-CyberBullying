# Environment variables template
# Copy values from your local .env to HF Spaces Secrets

# Hugging Face
HF_TOKEN=your_hf_token_here

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here

# Twitter OAuth 2.0
TWITTER_CLIENT_ID=your_client_id
TWITTER_CLIENT_SECRET=your_client_secret

# Twitter API v2
TWITTER_BEARER_TOKEN=your_bearer_token
TWITTER_CONSUMER_KEY=your_consumer_key
TWITTER_CONSUMER_SECRET=your_consumer_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret

# Upstash Redis
UPSTASH_REDIS_REST_URL=your_redis_url
UPSTASH_REDIS_REST_TOKEN=your_redis_token
REDIS_URL=your_full_redis_connection_url

# Frontend (Update after Vercel deployment)
FRONTEND_URL=https://your-frontend.vercel.app
BACKEND_URL=https://sidhartha2004-cyberguard.hf.space

# Moderation Settings (Optional - has defaults)
DELETE_THRESHOLD=4
FLAG_THRESHOLD=3
POLL_INTERVAL=120
