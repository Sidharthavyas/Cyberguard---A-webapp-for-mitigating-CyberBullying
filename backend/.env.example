# Twitter API Credentials
# API Key and Secret (Consumer Key) - For Tweepy Client operations
TWITTER_CONSUMER_KEY=your_api_key
TWITTER_CONSUMER_SECRET=your_api_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# OAuth 2.0 Client ID and Secret - For User Login Flow
TWITTER_CLIENT_ID=your_oauth2_client_id
TWITTER_CLIENT_SECRET=your_oauth2_client_secret


# OAuth Callback URL (update with your deployed frontend URL)
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000

# Upstash Redis (Free Tier)
REDIS_URL=redis://default:your_upstash_password@your-redis-url.upstash.io:6379

# Binary Classification Thresholds
# Optimal threshold for cyberbullying detection (0.0-1.0)
OPTIMAL_THRESHOLD=0.5

# Confidence threshold for automatic deletion (0.0-1.0)
# Bullying content with confidence >= this value will be auto-deleted
DELETE_CONFIDENCE_THRESHOLD=0.8

# Polling Interval (seconds)
POLL_INTERVAL=120

# Gemini API (for fallback moderation)
GEMINI_API_KEY=your_gemini_api_key_here5
